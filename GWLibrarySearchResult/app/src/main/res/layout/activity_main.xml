<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header with the GW logo, search bar, and additional icons -->


    <!-- Search Field -->
    <ImageView
        android:id="@+id/gw_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/gwlogo" />

    <EditText
        android:id="@+id/search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What would you like to find at the library?"
        android:inputType="text"
        android:layout_marginTop="100dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_field"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/white"
        android:background="@color/navy"
        android:text="Search"
        />


    <ImageView
        android:id="@+id/content"
        android:layout_width="395dp"
        android:layout_height="510dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newfile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_field"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:background="@color/gray"
        android:textSize="10dp"
        android:text="Upload content"
        />

</RelativeLayout>
